---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogTitle?: string;
}

const {
  title,
  description = 'Flynt is the AI intelligence layer built exclusively for client acquisition. Continuously surfaces signal-driven client opportunities for recruiters, sales teams, and GTM operators.',
  ogTitle
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />

  <!-- SEO -->
  <title>{title}</title>
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={ogTitle || title} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content="Flynt AI" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={ogTitle || title} />
  <meta name="twitter:description" content={description} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/images/logo-mark.svg" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
</head>
<body>

  <!-- ── Navigation ── -->
  <nav class="nav">
    <div class="nav__inner">
      <a href="/" class="nav__logo">
        <img src="/images/logo-with-text.svg" alt="Flynt AI" />
      </a>

      <div class="nav__spacer"></div>
      <ul class="nav__links">
        <li><a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a></li>
        <li><a href="/pricing" class={currentPath === '/pricing' ? 'active' : ''}>Pricing</a></li>
        <li><a href="/about" class={currentPath === '/about' ? 'active' : ''}>About</a></li>
        <li><a href="/faq" class={currentPath === '/faq' ? 'active' : ''}>FAQ</a></li>
      </ul>

      <div class="nav__actions">
        <a href="https://tryflynt.ai/" class="btn btn--primary">
          Start for Free
        </a>
      </div>
    </div>
  </nav>

  <!-- ── Page Content ── -->
  <main>
    <slot />
  </main>

  <!-- ── Footer ── -->
  <footer class="footer">
    <div class="footer__inner">
      <div class="footer__top">
        <div class="footer__brand">
          <img src="/images/logo-with-text.svg" alt="Flynt AI" class="footer__logo" />
          <p>Intelligence for operators who close.</p>
        </div>

        <div class="footer__col">
          <h4>Product</h4>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/pricing">Pricing</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/faq">FAQ</a></li>
          </ul>
        </div>

        <div class="footer__col">
          <h4>Legal</h4>
          <ul>
            <li><a href="/privacy">Privacy Policy</a></li>
            <li><a href="/terms">Terms of Service</a></li>
            <li><a href="mailto:hello@tryflynt.ai">Contact</a></li>
          </ul>
        </div>
      </div>

      <div class="footer__bottom">
        <span>© 2026 Flynt AI LLC. All rights reserved. Las Vegas, NV.</span>
        <div class="footer__legal">
          <a href="/privacy">Privacy</a>
          <a href="/terms">Terms</a>
        </div>
      </div>
    </div>
  </footer>

</body>
</html>
